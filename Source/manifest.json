{

  "manifest_version": 2,
  "name": "Error indicator",
  "description": "Provides common place for reporting errors from all opened pages.",
  "version": "1.7",
  "default_locale": "en",

  "permissions": [ "storage" ],

  "icons": {
    "32": "icons/error.svg"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "Report.html",
    "default_icon": {
      "16": "icons/ok.svg"
    }
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "ErrorDetails.js", "UserErrorDetails.js", "PageObserver.js", "content-script.js" ],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": [ "DateProvider.js", "ErrorIndicator.js", "BackgroundListener.js", "background.js" ]
  }

}
